# =============================================================================
# Recipme - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Django Settings
# -----------------------------------------------------------------------------

# SECURITY WARNING: Generate a new secret key for production!
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-this-in-production

# SECURITY WARNING: Set to False in production!
DEBUG=False

# Comma-separated list of allowed hosts (e.g., localhost,127.0.0.1,yourdomain.com)
ALLOWED_HOSTS=localhost,127.0.0.1

# Frontend URL for CORS and password reset links
FRONTEND_URL=http://localhost:3000

# Frontend API URL (must start with NEXT_PUBLIC_ to be available in browser)
# Used by Next.js frontend to communicate with Django backend
# Leave empty to use current origin (recommended for nginx proxy setup)
# For direct backend access (dev without nginx), set to http://localhost:8000
NEXT_PUBLIC_API_URL=

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------

POSTGRES_DB=recipme
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password-here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Redis Cache Configuration
# -----------------------------------------------------------------------------

REDIS_HOST=redis
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# External API Keys
# -----------------------------------------------------------------------------

# USDA FoodData Central API Key
# Get your free API key at: https://fdc.nal.usda.gov/api-key-signup.html
API_KEY=your-usda-fdc-api-key-here

# Internal API Secret Key (for internal service communication)
INTERNAL_API_SECRET_KEY=your-internal-api-secret-key-here

# -----------------------------------------------------------------------------
# Email Configuration (MailPit for Development)
# -----------------------------------------------------------------------------

EMAIL_HOST=mailpit
EMAIL_PORT=1025
DEFAULT_FROM_EMAIL=noreply@recipme.com

# -----------------------------------------------------------------------------
# Django Superuser (Auto-created on first run)
# -----------------------------------------------------------------------------
# These credentials are used to auto-create an admin user on first run
# Username will be the same as email (for login consistency)
# For development: Use these simple values
# For production: Use strong credentials or create manually

DJANGO_SUPERUSER_EMAIL=admin@recipme.com
DJANGO_SUPERUSER_PASSWORD=change-this-secure-password

# -----------------------------------------------------------------------------
# PgAdmin Configuration (Database Management UI)
# -----------------------------------------------------------------------------

PGADMIN_DEFAULT_EMAIL=admin@recipme.com
PGADMIN_DEFAULT_PASSWORD=your-secure-pgadmin-password

# -----------------------------------------------------------------------------
# Development vs Production
# -----------------------------------------------------------------------------

NODE_ENV=development
